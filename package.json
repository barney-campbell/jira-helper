{
  "name": "jira-helper",
  "version": "1.3.1",
  "description": "App for managing Jira related tasks such as time tracking.",
  "main": "dist/main/main/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/barney-campbell/jira-helper.git"
  },
  "scripts": {
    "build": "npm run build:main && vite build",
    "build:main": "tsc --project tsconfig.main.json",
    "build:dev": "vite build --mode development",
    "start": "npm run build:main && npm run build:dev && electron .",
    "start:dev": "npm run build:main && cross-env NODE_ENV=development electron .",
    "dev": "vite",
    "package": "npm run build && electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "jira",
    "time-tracking",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.jirahelper.app",
    "productName": "Jira Helper",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.10"
  }
}
