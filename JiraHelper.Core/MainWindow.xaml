<Window x:Class="JiraHelper.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JiraHelper.Core"
        mc:Ignorable="d"
        Title="Jira Helper" Height="700" Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Assigned Jira Issues" FontWeight="Bold" FontSize="18" Margin="10"/>
        <ListView x:Name="IssuesList" Grid.Row="1" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Key" DisplayMemberBinding="{Binding Key}" Width="100"/>
                    <GridViewColumn Header="Summary" DisplayMemberBinding="{Binding Summary}" Width="600"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="300"/>
                    <GridViewColumn Header="Assignee" DisplayMemberBinding="{Binding Assignee}" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
