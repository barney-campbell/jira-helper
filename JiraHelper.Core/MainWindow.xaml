<Window x:Class="JiraHelper.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JiraHelper.Core"
        mc:Ignorable="d"
        Title="Jira Helper" Height="700" Width="1300" MinWidth="600" MinHeight="400">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Dashboard" Click="ShowDashboard_Click"/>
                <MenuItem Header="Assigned Issues" Click="ShowAssignedIssues_Click"/>
                <MenuItem Header="Settings" Click="OpenSettings_Click"/>
                <MenuItem Header="Search" Click="ToggleSearch_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Refresh" Click="Refresh_Click" InputGestureText="Ctrl+R"/>
                <MenuItem Header="Save Time Tracking" Click="SaveTimeTracking_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" Margin="10,0,10,0" x:Name="SearchBarPanel" Visibility="Collapsed" VerticalAlignment="Center" Height="40">
            <TextBox x:Name="SearchBox" Width="200" Height="30" Margin="0,5,5,5" VerticalAlignment="Center" KeyDown="SearchBox_KeyDown"/>
            <Button Content="Search" Height="30" MinWidth="70" Margin="0,5,0,5" VerticalAlignment="Center" Click="SearchButton_Click"/>
        </StackPanel>
        <ContentControl x:Name="MainContentView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </DockPanel>
</Window>
