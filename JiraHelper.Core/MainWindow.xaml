<Window x:Class="JiraHelper.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JiraHelper.Core"
        mc:Ignorable="d"
        Title="Jira Helper" Height="700" Width="1300" MinWidth="600" MinHeight="400">
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="70" Background="#222" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Top navigation buttons with icons -->
            <Button Grid.Row="0" Height="50" Margin="0,20,0,0" Click="ShowDashboard_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="White" Text="&#xE80F;" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Row="1" Height="50" Margin="0,10,0,0" Click="ShowAssignedIssues_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="White" Text="&#xE9D5;" HorizontalAlignment="Center"/>
            </Button>
            <Button Grid.Row="2" Height="50" Margin="0,10,0,0" Click="ShowSearchPage_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="White" Text="&#xE721;" HorizontalAlignment="Center"/>
            </Button>
            <!-- Spacer -->
            <StackPanel Grid.Row="3" Height="1"/>
            <!-- Settings button at the bottom -->
            <Button Grid.Row="4" Height="50" Margin="0,10,0,20" VerticalAlignment="Bottom" Click="OpenSettings_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="White" Text="&#xE713;" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
        <ContentControl x:Name="MainContentView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </DockPanel>
</Window>
