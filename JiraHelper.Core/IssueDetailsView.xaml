<UserControl x:Class="JiraHelper.Core.IssueDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:JiraHelper.Core"
             Height="500" Width="700">
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Key:" FontWeight="Bold"/>
        <TextBlock x:Name="KeyText" Grid.Row="0" Margin="120,0,0,0"/>
        <TextBlock Text="Summary:" Grid.Row="1" FontWeight="Bold"/>
        <TextBlock x:Name="SummaryText" Grid.Row="1" Margin="120,0,0,0"/>
        <TextBlock Text="Status:" Grid.Row="2" FontWeight="Bold"/>
        <TextBlock x:Name="StatusText" Grid.Row="2" Margin="120,0,0,0"/>
        <TextBlock Text="Assignee:" Grid.Row="3" FontWeight="Bold"/>
        <TextBlock x:Name="AssigneeText" Grid.Row="3" Margin="120,0,0,0"/>
        <TextBlock Text="Description:" Grid.Row="4" FontWeight="Bold" Margin="0,10,0,0"/>
        <ScrollViewer Grid.Row="4" Margin="0,30,0,0" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="120,0,0,0"/>
        </ScrollViewer>
        <StackPanel Grid.Row="5" Margin="0,20,0,0">
            <Button x:Name="StartTrackingButton" Content="Start Time Tracking" Width="180" Height="32" Margin="0,0,10,0" Click="StartTrackingButton_Click"/>
            <Button x:Name="StopTrackingButton" Content="Stop Time Tracking" Width="180" Height="32" Margin="0,10,10,0" Click="StopTrackingButton_Click" Visibility="Collapsed"/>
            <TextBlock x:Name="TotalTimeText" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="Time Tracking Records:" FontWeight="Bold" Margin="0,10,0,5"/>
            <DataGrid x:Name="TimeTrackingGrid" Height="180" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" Margin="0,0,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Started" Binding="{Binding Started}" Width="200"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="200"/>
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="80"/>
                    <DataGridTemplateColumn Header="Edit" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit" Click="EditRecord_Click" Visibility="{Binding CanEdit, Converter={StaticResource BoolToVisibilityConverter}}" Tag="{Binding RecordId}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Delete" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="DeleteRecord_Click" Visibility="{Binding CanEdit, Converter={StaticResource BoolToVisibilityConverter}}" Tag="{Binding RecordId}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
