<UserControl x:Class="JiraHelper.Core.IssueSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="300" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Search Jira Issues" FontWeight="Bold" FontSize="18" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchBox" Width="300" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" KeyDown="SearchBox_KeyDown"/>
            <Button Content="Search" Height="30" MinWidth="70" VerticalAlignment="Center" Click="SearchButton_Click"/>
            <ProgressBar x:Name="SearchSpinner" Height="18" Width="120" IsIndeterminate="True" Visibility="Collapsed" Margin="10,0,0,0"/>
        </StackPanel>
        <TextBlock x:Name="ResultText" Grid.Row="2" Margin="10" FontSize="14" Foreground="Gray"/>
        <DataGrid x:Name="resultsGrid" Grid.Row="3" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseDoubleClick="ResultsGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="100"/>
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="700"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="200"/>
                <DataGridTextColumn Header="Assignee" Binding="{Binding Assignee}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
