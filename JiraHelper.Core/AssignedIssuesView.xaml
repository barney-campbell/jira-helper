<UserControl x:Class="JiraHelper.Core.AssignedIssuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="300" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Assigned Jira Issues" FontWeight="Bold" FontSize="18" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,10,0">
            <TextBlock Text="Updated: " FontWeight="Normal" FontSize="12"/>
            <TextBlock x:Name="UpdatedText" FontWeight="Bold" FontSize="12"/>
            <ProgressBar x:Name="RefreshSpinner" Height="18" Width="120" IsIndeterminate="True" Visibility="Collapsed" Margin="10,0,0,0"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Refresh" Width="100" Margin="10,0,0,0" HorizontalAlignment="Left" Click="Refresh_Click"/>
        <DataGrid x:Name="issuesList" Grid.Row="3" Margin="10" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseDoubleClick="IssuesList_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="100"/>
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="700"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="200"/>
                <DataGridTextColumn Header="Assignee" Binding="{Binding Assignee}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
